/dts-v1/;

#include <arm/tcc/tcc7045.dtsi>
#include <zephyr/dt-bindings/gpio/gpio.h>

/ {
	compatible = "tcc,topst_vcc45";
	model = "TOPST VCP45 Cortex-R5";
	#address-cells = <1>;
	#size-cells = <0>;

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &uart1;
		zephyr,shell-uart = &uart1;
	};

};

&ttc0 {
	status = "okay";
	clock-frequency = <5000000>;
};

&uart1 {
	status = "okay";
	current-speed = <115200>;
};
