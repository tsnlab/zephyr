/dts-v1/;

#include <arm/tcc/tcc70xx.dtsi>
#include <arm/tcc/tcc7045.dtsi>
#include <zephyr/dt-bindings/gpio/gpio.h>

/ {
	compatible = "tcc,topst_vcc45";
	model = "TOPST VCP45 Cortex-R5";
	#address-cells = <1>;
	#size-cells = <0>;

	aliases {
		led0 = &led_act;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &uart1;
		zephyr,shell-uart = &uart1;
	};

	leds {
		compatible = "gpio-leds";

		led_act: led-act {
			gpios = <&gio_aon 9 GPIO_ACTIVE_LOW>;
			label = "ACT";
		};
	};

};

&gio_aon {
	status = "okay";
};

&ttc0 {
	status = "okay";
	clock-frequency = <5000000>;
};

&uart1 {
	status = "okay";
	current-speed = <115200>;
};
