/dts-v1/;

#include <arm/tcc/tcc70xx.dtsi>
#include <arm/tcc/tcc7045.dtsi>
#include <zephyr/dt-bindings/gpio/gpio.h>
#include <zephyr/dt-bindings/spi/spi.h>

/ {
	compatible = "tcc,topst_vcc45";
	model = "TOPST VCP45 Cortex-R5";

	aliases {
		led0 = &led_act;
		spi0 = &spi0;
		sw0 = &button0;
	};

	chosen {
		zephyr,sram = &ram_dlm;
		zephyr,flash = &flash0;
		zephyr,console = &uart1;
		zephyr,shell-uart = &uart1;
	};

	leds {
		compatible = "gpio-leds";

		led_act: led-act {
			gpios = <&gpiob 3 GPIO_ACTIVE_HIGH>;
			label = "ACT";
		};
	};

	buttons {
		compatible = "gpio-keys";

		button0: button_0 {
			gpios = <&gpiob 2 GPIO_ACTIVE_LOW>;
			label = "User button";
		};
	};

};

&flash0 {
	status = "okay";
};

&gpiob {
	status = "okay";
};

&sysclk {
	status = "okay";
};

&tic {
	status = "okay";
};

&systick_timer {
	status = "okay";
	clock-frequency = <12000000>;
};

&uart1 {
	status = "okay";
	current-speed = <115200>;
	clock-frequency = <48000000>;
};

&spi0 {
	status = "okay";
	clock-frequency = <50000000>;
};
